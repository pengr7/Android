<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailtop"
        android:background="#379642"
        android:layout_weight="1.6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Edwin"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:layout_alignParentStart="true"
            android:id="@+id/detailname"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/empty_star"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18854211875"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textColor="#D5000000"
            android:id="@+id/phone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机 山东青岛移动"
            android:id="@+id/from"
            android:layout_below="@+id/phone"
            android:layout_alignParentStart="true"
            android:textColor="#8A000000"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />
        <View
            android:layout_height="match_parent"
            android:background="#1E000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="2dp"
            android:layout_alignBottom="@+id/from"
            android:layout_toStartOf="@+id/chat"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="15dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:src="@drawable/chat"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp" />

        <View android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="#1E000000"
            android:layout_below="@+id/from"
            android:layout_alignParentStart="true"
            android:id="@+id/narrowhorizon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多资料"
            android:id="@+id/moreinfo"
            android:layout_below="@+id/narrowhorizon"
            android:layout_alignParentStart="true"
            android:textColor="#D5000000"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="23dp"
            tools:ignore="HardcodedText" />

        <View android:layout_height="20dp"
            android:layout_width="fill_parent"
            android:background="#1E000000"
            android:id="@+id/thickhorizon"
            android:layout_below="@+id/moreinfo"
            android:layout_alignStart="@+id/moreinfo" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view2"
        android:layout_marginLeft="10dp" />

</LinearLayout>